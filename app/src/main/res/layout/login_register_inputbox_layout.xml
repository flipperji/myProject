<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_login_register_inputbox_rootview"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_login_register_inputbox_lefticon"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#777777"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_login_register_inputbox_inputarea"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:singleLine="true"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_login_register_inputbox_cleanicon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#C5C5C5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_login_register_inputbox_eyeicon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="7.5dp"
            android:gravity="center"
            android:paddingLeft="7.5dp"
            android:paddingRight="7.5dp"
            android:textColor="#C5C5C5"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_login_register_inputbox_below_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="5dp"
        android:textColor="#C5C5C5"
        android:textSize="12sp"
        android:visibility="gone" />
</LinearLayout>